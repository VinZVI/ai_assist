# ==============================================
# AI-Компаньон: Переменные окружения
# ==============================================
# Скопируйте этот файл в .env и заполните реальными значениями
# ВАЖНО: Никогда не коммитьте .env файл с реальными токенами!

# ==============================================
# Telegram Bot Configuration
# ==============================================
# Токен бота от @BotFather
BOT_TOKEN=your_telegram_bot_token_here

# URL для webhook (только для продакшена)
# Оставьте пустым для использования polling в разработке
WEBHOOK_URL=

# Секретный ключ для webhook (опционально)
WEBHOOK_SECRET=

# ==============================================
# Database Configuration
# ==============================================
# Полный URL подключения к PostgreSQL
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/ai_assist

# Альтернативно можно использовать отдельные параметры:
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=ai_assist
DATABASE_USER=postgres
DATABASE_PASSWORD=password

# Максимальное количество соединений в пуле
DATABASE_POOL_SIZE=10

# Таймаут подключения к БД (секунды)
DATABASE_TIMEOUT=30

# ==============================================
# DeepSeek API Configuration
# ==============================================
# API ключ от DeepSeek
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Базовый URL API DeepSeek
DEEPSEEK_BASE_URL=https://api.deepseek.com

# Модель для использования
DEEPSEEK_MODEL=deepseek-chat

# Максимальное количество токенов в ответе
DEEPSEEK_MAX_TOKENS=1000

# Температура для генерации (0.0-2.0)
DEEPSEEK_TEMPERATURE=0.7

# Таймаут запроса к API (секунды)
DEEPSEEK_TIMEOUT=30

# ==============================================
# Application Configuration
# ==============================================
# Режим отладки (true/false)
DEBUG=false

# Уровень логирования (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Секретный ключ приложения (для подписи данных)
SECRET_KEY=your_secret_key_here

# Часовой пояс
TIMEZONE=Europe/Moscow

# ==============================================
# User Limits Configuration
# ==============================================
# Лимит бесплатных сообщений в день
FREE_MESSAGES_LIMIT=10

# Цена премиум доступа (в Telegram Stars)
PREMIUM_PRICE=99

# Длительность премиум доступа (дней)
PREMIUM_DURATION_DAYS=30

# ==============================================
# Admin Configuration
# ==============================================
# ID администратора бота (ваш Telegram ID)
ADMIN_USER_ID=123456789

# Дополнительные админы (через запятую)
ADMIN_USER_IDS=123456789,987654321

# ==============================================
# Payment Configuration
# ==============================================
# Провайдер платежей (telegram_stars, yookassa)
PAYMENT_PROVIDER=telegram_stars

# Токен провайдера платежей (для ЮKassa)
PAYMENT_PROVIDER_TOKEN=

# ==============================================
# Redis Configuration (опционально)
# ==============================================
# URL подключения к Redis для кеширования
REDIS_URL=redis://localhost:6379/0

# Время жизни кеша (секунды)
CACHE_TTL=3600

# ==============================================
# Monitoring & Analytics
# ==============================================
# Включить детальное логирование запросов
ENABLE_REQUEST_LOGGING=false

# Включить метрики производительности
ENABLE_METRICS=false

# Sentry DSN для отслеживания ошибок (опционально)
SENTRY_DSN=

# ==============================================
# Rate Limiting
# ==============================================
# Максимальное количество запросов в минуту от одного пользователя
RATE_LIMIT_PER_MINUTE=60

# Время блокировки при превышении лимита (секунды)
RATE_LIMIT_BLOCK_TIME=300

# ==============================================
# Development Settings
# ==============================================
# Использовать polling вместо webhook в разработке
USE_POLLING=true

# Включить автоперезагрузку при изменении кода
AUTO_RELOAD=true

# Показывать подробные ошибки в ответах бота
SHOW_DEBUG_INFO=false
```

