# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
WEBHOOK_URL=
WEBHOOK_SECRET=
USE_POLLING=true

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=ai_assist
DATABASE_USER=postgres
DATABASE_PASSWORD=password
DATABASE_POOL_SIZE=20
DATABASE_TIMEOUT=30

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
CACHE_TTL=3600

# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=["openrouter/auto"]  # Can be array of models
OPENROUTER_MAX_TOKENS=1000
OPENROUTER_TEMPERATURE=0.7
OPENROUTER_TIMEOUT=30
OPENROUTER_SITE_URL=https://ai-assist.example.com
OPENROUTER_APP_NAME=AI-Assistant

# AI Provider Configuration
AI_PRIMARY_PROVIDER=openrouter
AI_ENABLE_FALLBACK=true

# User Limits Configuration
FREE_MESSAGES_LIMIT=5
PREMIUM_DURATION_DAYS=30
PREMIUM_PRICE=100
PREMIUM_MESSAGE_LIMIT=100
SPAM_ACTIONS_PER_MINUTE=20
SPAM_RESTRICTION_DURATION=10
DAILY_MESSAGE_LIMIT=20

# Payment Configuration
PAYMENT_ENABLED=true
PAYMENT_PROVIDER=telegram_stars
PAYMENT_TEST_MODE=false

# Monitoring Configuration
HEALTH_CHECK_INACTIVITY_HOURS=6
HEALTH_CHECK_INTERVAL=60

# Conversation Configuration
CONVERSATION_ENABLE_SAVING=true
CONVERSATION_CACHE_TTL=600
USER_ACTIVITY_UPDATE_INTERVAL=300

# Admin Configuration
ADMIN_USER_ID=123456789
ADMIN_USER_IDS=

# Application Configuration
DEBUG=false
LOG_LEVEL=INFO